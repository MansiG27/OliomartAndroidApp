<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="135dp"
            android:layout_height="28dp"
            android:layout_margin="18dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/sell_on_oliomart_icon_id"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="end"
            android:layout_marginEnd="18dp"
            android:src="@drawable/sell_on_oliomart_ic" />

        <ImageView
            android:id="@+id/search_icon_id"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="end"
            android:layout_marginEnd="18dp"
            android:src="@drawable/search_ic" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/hi_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/lato"
        android:text="Hi,"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_dashboard" />

    <TextView
        android:id="@+id/name_of_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato"
        android:text="Anastesia Steal"
        android:textColor="@color/yellow"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hi_textview"/>

    <TextView
        android:id="@+id/textview_after_username_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/noto_sans_italic"
        android:text="What brings you in today?"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/name_of_user_id"
        app:layout_constraintTop_toBottomOf="@+id/hi_textview" />

    <TextView
        android:id="@+id/category_txtView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_of_user_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="18dp"
        android:text="Category"
        android:fontFamily="@font/lato"
        android:textSize="18sp"
        android:textColor="@color/yellow"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_recyclerView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/category_txtView_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="18dp"/>

    <TextView
        android:id="@+id/allProducts_txtView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/category_recyclerView_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="18dp"
        android:text="All Products"
        android:fontFamily="@font/lato"
        android:textSize="18sp"
        android:textColor="@color/yellow"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allProducts_recyclerView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allProducts_txtView_id" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBarContainer_id"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemPaddingBottom="10dp"
        app:menu="@menu/bottom_navs"
        app:itemIconTint="@color/white"
        android:background="@color/black"
        app:itemTextColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>