<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_containerId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="9dp"
    android:orientation="horizontal"
    android:background="@drawable/rectangle_background"
    android:padding="12dp">

        <ImageView
            android:id="@+id/product_image_id"
            android:layout_width="88dp"
            android:layout_height="110dp"
            android:src="@drawable/trial"
            android:scaleType="centerCrop"
            android:background="@drawable/product_img_shape"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/innerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Name of the Product here "
            android:fontFamily="@font/lato"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:maxLines="2"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/subCategory_inStock_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_subCategory_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub-Category"
                android:textColor="#808080"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/inStock_LinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/inStock_ic_id"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/in_stock"/>
                <TextView
                    android:id="@+id/inStock_textview_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="InStock"
                    android:textColor="@color/white"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/price_wishlistBtn_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceTag_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 1200"
                android:textColor="@color/yellow"
                android:textSize="16sp"
                android:fontFamily="@font/noto_sans"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
                
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/addToWishlistBtn_id"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/product_wishlist"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>